<%- include('../includes/head.ejs') %> 

<%- include('../includes/header.ejs') %> 

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Stocks</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Stocks</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<BR><BR>
    <div class="container mt-3">
        <h2><b>Products</b></h2><br>
        <div class="row">
            <div class="col-md-10">
            </div>
            <div class="col-md-2">
                <a href="/insert" class="btn btn-primary btn-block"><i class="fa fa-plus" aria-hidden="true"></i> New Product</a>
            </div>
        </div>
        <br>
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Images</th>
                    <th>Product</th>
                    <th>Amount</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Action</th>

                </tr>
            </thead>
            <tbody id="myTable">
                <% if (prods.length > 0) { %>
                    <% prods.map((product, index) => { %>
                        <tr>
                            <td>
                                <%- (index+1) %>
                            </td>
                            <td>
                                
                            <img src="<%- product.img_path%>" width="100px" height="90px" alt="">
                            
                                
                            </td>
                            <td>
                            <%- product.product_name%>
                            
                        </td>
                            <td>
                            <%- product.amount%>
                            
                        </td>
                            <td>
                                <%- product.price%>
                            </td>
                            <td>
                                <a href="<%- '/update/'+product._id%>" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                <a href="<%- '/delete/'+product._id%>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger"> <i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4">
                                        <h1>No Products Found!</h1>
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
        </div>


<BR><BR><BR><BR><BR><BR><BR><BR>

    <%- include('../includes/end.ejs') %> 


